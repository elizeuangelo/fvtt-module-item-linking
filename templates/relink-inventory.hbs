<form autocomplete="off" class="relink-inventory">
    <table>
        <thead>
            <tr>
                <th>Actor</th>
                <th>Item</th>
                <th>Type</th>
                <th>Base Item</th>
                <th>Linked</th>
                <th>Matches</th>
                <th>Similar Items</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each entries}}
            <tr data-item="{{item.id}}">
                <td data-action="render" data-uuid="{{actor.uuid}}">{{actor.name}}{{#if (eq actor.type "npc")}} (NPC){{/if}}</td>
                <td data-action="render" data-uuid="{{item.uuid}}">{{item.name}}</td>
                <td>{{localize label}}</td>
                {{#if baseItem}}
                    <td data-action="render" data-uuid="{{baseItem.uuid}}">{{baseItem.name}}</td>
                {{else}}
                    <td>-</td>
                {{/if}}
                <td>
                    <span
                        class="dot {{#if isLinked}}green{{/if}}"
                    ></span>
                </td>
                <td>{{similarItems.length}}</td>
                <td>
                    <select name="similar-select-{{item.id}}">
                        {{#each similarItems}}
                            <option value="{{uuid}}">{{name}}</option>
                        {{/each}}
                    </select>
                </td>
                <td>
                    <i class="fas fa-atlas compendium-item {{#unless similarItems.length}}btn-disabled{{/unless}}" data-action="render" data-uuid="{{similarItems.0.uuid}}" title="Compendium"></i>
                    <i class="fas fa-sync-alt resync-item btn-update {{#unless similarItems.length}}btn-disabled{{/unless}}" data-uuid="{{item.uuid}}" data-tooltip="Update"></i>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>